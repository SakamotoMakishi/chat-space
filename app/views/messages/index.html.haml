.flash-box
  .wrapper
    = render 'messages/index'
    .chat-main
      .main-header
        .current-group{data:{group_id: "/"}}
          .current-group__name aaa
          .member-list
            Memberï¼š
            .member-list__member makiship
        = link_to 'edit' do
          .main-header__edit-btn Edit
      .messages
        .message{data:{message_id: "/"}}
          = message.user.name
          .upper-info
            .upper-info__user
              = message.created_at.strftime("%Y/%m/%d %H:%M")C
            .upper-info__date 2019/07/06(Sat) 16:52:00
          .message__text te
      .form
        = form_for [@group,@message] do |f|
          = f.text_field :content, class: 'new__message', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'image-label' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'
