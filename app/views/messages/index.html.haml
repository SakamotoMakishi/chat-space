.flash-box
  .wrapper
    = render 'messages/index'
    .chat-main
      .main-header
        .current-group
          .current-group__name
            = @group.name
          .member-list
            Memberï¼š
            .member-list__member
              - @group.users.each do |user|
                = user.name
        = link_to 'edit' do
          .main-header__edit-btn Edit
      .message_list
        = render @messages
      .form
        .message_form
          = form_for [@group,@message] do |f|
            .message-box
              = f.text_field :content, class: 'message-box__text', placeholder: 'type a message'
              = f.label :image, class: 'message-box__image' do
                = fa_icon 'picture-o', class: 'fa'
                = f.file_field :image, class: 'hidden'
              = f.submit 'Send', class: 'submit'
